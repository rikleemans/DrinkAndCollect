@page "/"
@using DrinkAndCollectV4.Controllers
@using DrinkAndCollectV4.Models
@inject UserController usercontroller

<h1>Hello, world!</h1>

Welcome to your new app.

<SurveyPrompt Title="How is Blazor working for you?" />
<div class="row">
    <div class="col-md-6">
        <h1 class="h3">Reviews</h1>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">ReviewID</th>
                    <th scope="col">UserID</th>
                    <th scope="col">BeerID</th>
                    <th scope="col">Rate</th>
                    <th scope="col">Taste</th>
                    <th scope="col">Description</th>
                    <th scope="col">Datum</th>
                </tr>
            </thead>
            <tbody>
                @if (Review.Count > 0)
                {
                    foreach (var user in Review)
                    {
                        <tr>
                            <td>@user.ReviewID</td>
                            <td>@user.UserID</td>
                            <td>@user.BeerID</td>
                            <td>@user.Rate</td>
                            <td>@user.Taste</td>
                            <td>@user.Description</td>
                            <td>@user.Datum</td>
                            <td>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
@code{

    List<ReviewViewModel> Review;
    protected override async Task OnInitializedAsync()

    {
        Review = await usercontroller.GetAllReviewsAsync();
    }
}
